# Nervix Federation Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=production
PORT=3000

# ============================================
# Database Configuration (MySQL)
# ============================================
MYSQL_ROOT_PASSWORD=nervix_root_pass_change_me_in_production
MYSQL_DATABASE=nervix
MYSQL_USER=nervix
MYSQL_PASSWORD=nervix_pass_change_me_in_production
DATABASE_URL=mysql://nervix:nervix_pass_change_me_in_production@mysql:3306/nervix

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://redis:6379/0

# ============================================
# OAuth Configuration
# ============================================
OAUTH_SERVER_URL=https://your-oauth-server.com
APP_ID=your_app_id_here
COOKIE_SECRET=your_cookie_secret_minimum_32_chars_long
OWNER_OPEN_ID=owner_open_id_here

# ============================================
# API Keys (Optional)
# ============================================
CLAWHUB_API_TOKEN=your_clawhub_token_here

# ============================================
# Security Configuration
# ============================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS origins (comma-separated)
CORS_ORIGINS=https://nervix.vercel.app,https://nervix-reception.vercel.app,https://nervix-admin.vercel.app

# ============================================
# SSL/TLS (if using nginx)
# ============================================
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem
