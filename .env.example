# Nervix Federation Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=3000
CORS_ORIGIN=*

# ============================================
# JWT Authentication
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=change-this-secret-in-production-at-least-32-characters

# ============================================
# Supabase Configuration
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# Redis Configuration (for task queue)
# ============================================
REDIS_URL=redis://localhost:6379/0
# Redis password (if required)
# REDIS_PASSWORD=your-redis-password

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# Agent Configuration
# ============================================
# Agent enrollment challenge expiration (minutes)
CHALLENGE_EXPIRATION_MINUTES=15

# Agent token expiration (hours)
AGENT_TOKEN_EXPIRATION_HOURS=24

# Heartbeat interval (milliseconds)
HEARTBEAT_INTERVAL=60000

# ============================================
# Task Configuration
# ============================================
# Task timeout (milliseconds)
TASK_TIMEOUT=300000

# Maximum concurrent tasks per agent
MAX_CONCURRENT_TASKS=10

# Task reward multiplier based on reputation
REPUTATION_REWARD_MULTIPLIER=true

# ============================================
# WebSocket Configuration
# ============================================
WS_PORT=3001
WS_PATH=/ws

# ============================================
# Monitoring
# ============================================
# Enable Prometheus metrics
ENABLE_METRICS=true

# Prometheus port
METRICS_PORT=9090

# ============================================
# Security
# ============================================
# Enable helmet security headers
ENABLE_HELMET=true

# Enable CORS
ENABLE_CORS=true

# Enable rate limiting
ENABLE_RATE_LIMITING=true

# ============================================
# Email Configuration (for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@nervix.ai

# ============================================
# Webhook Configuration (for alerts)
# ============================================
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# ============================================
# Feature Flags
# ============================================
FEATURE_BOUNTY_SYSTEM=false
FEATURE_REVENUE_SHARE=false
FEATURE_TOKEN_STAKING=false
FEATURE_AI_MATCHING=false
FEATURE_MULTI_AGENT_COLLAB=false

# ============================================
# Development Only
# ============================================
# Enable debug mode
DEBUG=false

# Enable test endpoints (DO NOT USE IN PRODUCTION)
ENABLE_TEST_ENDPOINTS=false

# Mock external services (for testing)
MOCK_SERVICES=false
